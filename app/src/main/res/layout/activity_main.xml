<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="una.ac.cr.wcc.MainActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background">


        <EditText
            android:id="@+id/username_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="137dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Usuario"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/pass_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/username_input"
            android:layout_alignStart="@+id/username_input"
            android:layout_below="@+id/username_input"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:hint="@string/ContraseÃ±a"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@color/divider"
            android:text="@string/Ingresar"
            android:textColor="@color/BLACK"
            android:layout_below="@+id/pass_input"
            android:layout_alignLeft="@+id/pass_input"
            android:layout_alignStart="@+id/pass_input" />

        <Button
            android:id="@+id/Btn_Registrar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="23dp"
            android:background="@color/divider"
            android:text="@string/Registrar"
            android:textColor="@color/BLACK"
            android:layout_below="@+id/btnIngresar"
            android:layout_alignLeft="@+id/btnIngresar"
            android:layout_alignStart="@+id/btnIngresar" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
