<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="una.ac.cr.wcc.RegistrarFacturasActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
        android:id="@+id/numeroFactura_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Factura NÃºmero" />

        <EditText
            android:id="@+id/codigoCliente_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cuenta Cliente" />
        <EditText
            android:id="@+id/montoFactura_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monto Factura" />

        <EditText
            android:id="@+id/fechaFactura_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha Factura" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btn_click"
            android:text="Registrar" />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btn_click"
            android:text="Eliminar" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btn_click"
            android:text="Actualizar" />

        <Button
            android:id="@+id/listar_facturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btn_click"
            android:text="Listar" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
